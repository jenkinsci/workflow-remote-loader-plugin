  <licenses>
    <license>
      <name>MIT License</name>
      <url>http://opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <properties>
    <jenkins.version>1.609.1</jenkins.version>
    <java.level>6</java.level>
  </properties>

  <developers>
    <developer>
      <id>oleg_nenashev</id>
      <name>Oleg Nenashev</name>
      <email>o.v.nenashev@gmail.com</email>
